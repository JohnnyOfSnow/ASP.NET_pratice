@{
    ViewBag.Title = "Home Page";
    Layout = null;

}

@model MVCTest_ReceiveDataByModel.Models.Student

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<form style="margin-left:10px;" method="post" action="/Home/Transcripts">
    <div class="form-group">
        <label for="studentId_Label">學號</label>
        <input type="text" class="form-control" name="id" id="studentId_id" aria-describedby="studentIdHelp" placeholder="請輸入學號..." value="@Model.id" />
        <small id="studentIdHelp" class="form-text text-muted">請輸入學號</small>
    </div>

    <div class="form-group">
        <label for="name_Label">姓名</label>
        <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp" placeholder="請輸入姓名..." value="@Model.name" />
        <small id="nameHelp" class="form-text text-muted">請輸入姓名</small>
    </div>

    <div class="form-group">
        <label for="score_Label">分數</label>
        <input type="text" class="form-control" name="score" id="score" aria-describedby="scoreHelp" placeholder="請輸入分數..." value="@Model.score" />
        <small id="scoreHelp" class="form-text text-muted">請輸入分數</small>
    </div>

    <button type="submit" class="btn-primary">確定</button>
</form>