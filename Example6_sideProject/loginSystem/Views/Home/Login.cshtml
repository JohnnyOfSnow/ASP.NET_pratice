@{
    ViewBag.Title = "Login";
    Layout = null;
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <form style="margin-left:10px;" method="post" action="">
        <h1>請輸入帳號密碼</h1>
        <div>
            <span style="color:red">@ViewBag.Msg</span>
        </div>
        <div class="form-group">
            <label for="inputAccount">帳號</label>
            <input type="text" class="form-control" id="account" name="account" placeholder="輸入帳號" value="" />
            <small id="accountHelp" class="form-text text-muted">輸入英數字</small>
        </div>
        <div class="form-group">
            <label for="inputPassword">密碼</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="輸入密碼" value="">
        </div>
        <button type="submit" class="btn btn-primary">登入</button>
        <button type="button" class="btn btn-warning" onclick="register()">註冊</button>
    </form>
    <script>
    function register() {
        location.href = "/Home/Index";
    }
    </script>
 
</body>
</html>
